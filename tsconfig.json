{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
      "target": "es6",
      "types": [
        "mocha",
        "node"
      ],
      "useDefineForClassFields": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "strictNullChecks": true
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules",]
}
